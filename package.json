{
  "name": "vue-template",
  "description": "A vue3 project template with Vue Router, Pinia, Typescript, SCSS, Tailwindcss v3, sweetalert2 and pnpm.",
  "version": "0.0.0",
  "author": {
    "name": "hyperbola",
    "email": "me@hyperbola.me",
    "url": "https://blog.hyperbola.me"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wdzeng/vue3-template.git"
  },
  "private": "true",
  "packageManager": "pnpm@8.6.6",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint src/ --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "pinia": "^2.1.4",
    "sweetalert2": "^11.7.12",
    "vue": "^3.3.4",
    "vue-router": "^4.2.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^2.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.19",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.44.0",
    "eslint-plugin-vue": "^9.15.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.25",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "sass": "^1.63.6",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.1.6",
    "vite": "^4.4.0",
    "vitest": "^0.33.0",
    "vue-tsc": "^1.8.4"
  }
}
